<winui:Window
    x:Class="SharpConstraintLayout.Maui.Pure.Example.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SharpConstraintLayout.Maui.Pure.Example.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winui="using:Microsoft.UI.Xaml"
    mc:Ignorable="d">

    <controls:StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Horizontal">
        <controls:Button x:Name="myButton" Click="myButton_Click">Click Me</controls:Button>
    </controls:StackPanel>
</winui:Window>
