<Window x:Class="SharpConstraintLayout.Example.ScrollTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpConstraintLayout.Example"
        mc:Ignorable="d"
        Title="ScrollTestWindow" Height="450" Width="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="50" Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0" >
            <Button x:Name="GridNestListViewButton" Click="GridNestListViewButton_Click">GridNestListView</Button>
            <Button x:Name="ConstraintNestListViewButton" Click="ConstraintNestListViewButton_Click">ConstraintNestListView</Button>
            <Button></Button>
        </WrapPanel>
        <Grid Grid.Row="1" Name="testPanel">
            
        </Grid>
    </Grid>
</Window>
